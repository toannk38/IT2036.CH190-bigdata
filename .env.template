# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=vietnam_stock_ai

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_PRICE_TOPIC=stock_prices_raw
KAFKA_NEWS_TOPIC=stock_news_raw

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=sqlite:////opt/airflow/airflow.db
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
LOG_LEVEL=INFO
PRICE_COLLECTION_INTERVAL=300  # 5 minutes in seconds
NEWS_COLLECTION_INTERVAL=1800  # 30 minutes in seconds
ANALYSIS_INTERVAL=3600  # 1 hour in seconds

# Aggregation Weights
WEIGHT_TECHNICAL=0.4
WEIGHT_RISK=0.3
WEIGHT_SENTIMENT=0.3

# Alert Thresholds
ALERT_BUY_THRESHOLD=70
ALERT_WATCH_THRESHOLD=40

# Data Retention
DATA_RETENTION_DAYS=365
